<Window x:Class="Unicorn.View.StartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="StartWindow"
        Width="300"
        Height="300"
        DataContext="{Binding Source={StaticResource Locator},
                              Path=StartViewModel}">
    <StackPanel Margin="30">
        <RadioButton GroupName="roomType" IsChecked="{Binding IsClient}">Подключиться к комнате</RadioButton>
        <RadioButton GroupName="roomType" IsChecked="{Binding IsServer}">Создать комнату</RadioButton>
        <StackPanel Margin="0 10 0 0" Visibility="{Binding IsClient, Converter={StaticResource BooleanToVisibilityConverter}}">
            <Label>Имя пользователя</Label>
            <TextBox Text="{Binding UserName, UpdateSourceTrigger=PropertyChanged}" />
            <Label>IP сервера</Label>
            <TextBox Text="{Binding ServerAdress, UpdateSourceTrigger=PropertyChanged}" />
        </StackPanel>
        <StackPanel Margin="0 10 0 0" Visibility="{Binding IsServer, Converter={StaticResource BooleanToVisibilityConverter}}">
            <Label>Имя пользователя</Label>
            <TextBox Text="{Binding UserName, UpdateSourceTrigger=PropertyChanged}" />
        </StackPanel>
        <Button Margin="15"
                Command="{Binding StartCommand}"
                IsEnabled="{Binding CanStart}">
            Далее
        </Button>
    </StackPanel>
</Window>
